<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
   <package name="messages"  namespace="/messages"  extends="default1">
  
    <action name="add" class="com.action.MessagesAction" method="add">
   <result name="success">/success.jsp</result>
   </action>
    <action name="findALL" class="com.action.MessagesAction" method="findAll">
   <result name="success">/message/AllMessages.jsp</result>
   </action>
    <action name="delete" class="com.action.MessagesAction" method="delete">
   <result name="success" type="redirectAction">findAll</result>
   </action>
    <action name="update" class="com.action.MessagesAction" method="update">
   <result name="success" type="redirectAction">findAll</result>
   </action>
     <action name="findById" class="com.action.MessagesAction" method="findById">
   <result name="success">/shoppingList/updateshoppingList.jsp</result>
   </action>
    </package> 
</struts>
