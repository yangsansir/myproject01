<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
	<!-- Database connection settings -->
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<property name="connection.url">
		jdbc:mysql://localhost:3306/小区物业
	</property>
	<property name="connection.username">root</property>
	<property name="connection.password">1234</property>
	<property name="connection.useUnicode">true</property>
	<property name="connection.characterEncoding">UTF-8</property>
	<!-- JDBC connection pool (use the built-in) -->
	<property name="connection.pool_size">1</property>
	<!-- SQL dialect -->
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<!-- Enable Hibernate's automatic session context management -->
	<!-- 	<property name="current_session_context_class">thread</property> -->
	<property name="current_session_context_class">
		org.springframework.orm.hibernate3.SpringSessionContext
	</property>
	<!-- Disable the second-level cache -->
	<property name="cache.provider_class">
		org.hibernate.cache.NoCacheProvider
	</property>
	<!-- Echo all executed SQL to stdout -->
	<property name="show_sql">true</property>
	<!-- Drop and re-create the database schema on startup -->
	<property name="hbm2ddl.auto">update</property>

	<property name="format_sql">true</property>
	<mapping resource="com/entities/User.hbm.xml" />
	<mapping resource="com/entities/Role.hbm.xml" />
	<mapping resource="com/entities/Function.hbm.xml" />
	<mapping resource="com/entities/Goods.hbm.xml" />
	<mapping resource="com/entities/GoodsCategory.hbm.xml" />
	<mapping resource="com/entities/Supplier.hbm.xml" />
	<mapping resource="com/entities/Warehouse.hbm.xml" />
	<mapping resource="com/entities/CarHoldBill.hbm.xml" />
	<mapping resource="com/entities/CarPayment.hbm.xml" />
	<mapping resource="com/entities/HouseHoldBill.hbm.xml" />
	<mapping resource="com/entities/SinglePayment.hbm.xml" />
	<mapping resource="com/entities/BillOutBody.hbm.xml" />
	<mapping resource="com/entities/BillOutHead.hbm.xml" />
	<mapping resource="com/entities/CheckUser.hbm.xml" />
	<mapping resource="com/entities/ReturnBill.hbm.xml" />
	<mapping resource="com/entities/Sale.hbm.xml" />
	<mapping resource="com/entities/Tsale.hbm.xml" />
	<mapping resource="com/entities/Customer.hbm.xml" />

</session-factory>
</hibernate-configuration>