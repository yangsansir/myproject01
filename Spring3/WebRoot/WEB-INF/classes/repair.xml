<struts>
   <package name="repair"  namespace="/repair"  extends="default1">
    <action name="addrepair" class="com.action.RepairAction" method="addrepair">
  <result name="success">/success.jsp</result>
   </action>
   <action name="findAll" class="com.action.RepairAction" method="findAll">
   <result name="success">/repair/AllRepair.jsp</result>
   </action>
    <action name="delete" class="com.action.RepairAction" method="delete">
   <result name="success" type="redirectAction">findAll</result>
   </action>
    <action name="update" class="com.action.RepairAction" method="update">
   <result name="success" type="redirectAction">findAll</result>
   </action>
     <action name="findById" class="com.action.RepairAction" method="findById">
   <result name="success">/repair/updateRepair.jsp</result>
   </action>
     <action name="findAll1" class="com.action.RepairTypeAction" method="findAll">
   <result name="success">/repair.jsp</result>
   </action>
    </package> 
</struts>
