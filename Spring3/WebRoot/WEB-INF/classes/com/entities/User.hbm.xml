<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.entities">
	 <class name="User" table="user">
		<id name="id" column="id">
            <generator class="native"/>
        </id>
	     <property name="loginName" type="java.lang.String" column="loginName"/>
	       <property name="password" type="java.lang.String" column="password"/>
	         <property name="repassword" type="java.lang.String" column="repassword"/>
	           <property name="realName" type="java.lang.String" column="realName"/>
	             <property name="mobilephone" type="java.lang.String" column="mobilephone"/>
	              <property name="email" type="java.lang.String" column="email"/>
	                  <property name="remark" type="java.lang.String" column="remark"/>
	      <many-to-one name="role" class="Role" column="role_id" lazy="false"></many-to-one>
     </class>

</hibernate-mapping>